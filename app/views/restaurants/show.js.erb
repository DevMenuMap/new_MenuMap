$("#comment_body tbody").append("<%= j(render partial: 'comments/show', collection: @comments, as: :comment) %>");

// Hide link if it is last page otherwise update link
<% if @comments.next_page.nil? %>
    $("#show_more_link").hide();
<% else %>
    $("#show_more_link").attr("href", "<%= restaurant_path(@restaurant, :page => @comments.next_page) %>");
<% end %>