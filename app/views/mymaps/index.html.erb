<h1>Mymap#index</h1>

<% content_for :head do %>
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:site" content="@luke9407" />
	<meta name="twitter:creator" content="@luke9407" />
	<meta name="twitter:title" content="MenuMap" />
	<meta name="twitter:description" content="MyMap" />
	<% unless @user.mymap_snapshot.blank? %>
		<meta name="twitter:image" content="<%= @user.mymap_snapshot.snapshot.url %>" />
	<% end %>
	<meta property="og:type" content="website" />
	<meta property="og:title" content="MenuMap" />
	<meta property="og:url" content="http://52.69.51.63/users/<%= @user.username %>/MyMap" />
	<meta property="og:description" content="MyMap" />
	<% unless @user.mymap_snapshot.blank? %>
		<meta property="og:image" content="<%= @user.mymap_snapshot.snapshot.url %>" />
	<% end %>
<% end %>

<div id="naver_map"></div>

<table>
	<tr>
		<th>mymap_id</th>
		<th>restaurant_id</th>
		<th>restaurant_name</th>
		<th>mymap_button</th>
	</tr>

	<%= render @mymaps %>
</table>

<%= link_to "share MyMap", new_user_mymap_snapshot_path(@user), id: "share_mymap_button", remote: true, data: {toggle: "modal", target: "#myModal"} %>

<%= render 'shared/modal' %>

<script>
	$(document).on("page:load", loadNaverMap(<%= @center_y %>, <%= @center_x %>, 8));
	$(document).ready(function(){ 
		showGroupMarkers(<%= @coord_array %>, <%= @groups %>);
	});
</script>
