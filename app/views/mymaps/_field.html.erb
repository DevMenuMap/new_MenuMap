<div class="form-group">
	<%= f.label :rating, "별점" %>
	<div class="star_rating_form" data-score=<%= @mymap.rating %>></div>
</div>

<div class="form-group">
	<%= f.label :group, "아이콘 선택" %><br/>
	<% 1.upto(9) do |n| %>
		<label for="mymap_group_<%= n %>"> 
			<%= image_tag "/images/mymaps/mymap_group_icon_#{n}.svg", id: "mymap_group_icon_#{n}", style: "height: 20px; width: 20px;" %> 
			<%= f.radio_button :group, n %>
		</label>
	<% end %>
</div>

<div class="form-group">
	<%= f.text_area :contents, { class: "form-control", rows: 3, placeholder: "#{@restaurant.name}에 대한 한줄평을 남겨주세요." } %>
</div>
