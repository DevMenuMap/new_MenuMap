$("#myModal #comment_body").append("<%= j(render partial: 'comments/show', collection: @comments, as: :comment) %>");

// Hide link if it is last page otherwise update link.
<% if @comments.next_page.nil? %>
    $("#myModal .show_more_link").hide();
<% else %>
    $("#myModal .show_more_link").attr("href", "<%= more_menu_menu_comments_path(@menu, page: @comments.next_page) %>");
<% end %>
