<% provide(:page_title, "문의사항") %>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div id="mm-help">
				<div id="mm-help-title">
					<h1>자주묻는 질문</h1>
				</div>
				<% @notices.each do |notice| %>
					<div class="mm-help-qna">
						<a data-toggle="collapse" href="#mm-help-col-<%= notice.id %>">
							<h3><%= notice.question %></h3>
						</a>
						<div id="mm-help-col-<%= notice.id %>" class="panel-collapse collapse">
							<p><%= notice.answer %></p>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
