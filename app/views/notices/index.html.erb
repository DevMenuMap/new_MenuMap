<% provide(:page_title, "문의사항") %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Q & A</h1>
		<%= link_to "질문하기", new_question_path, remote: true, data: { toggle: "modal", target: "#myModal" } %>

		<% @notices.each do |notice| %>
			<a data-toggle="collapse" href="#notice_<%= notice.id %>">
				<h3><%= notice.question %></h3>
			</a>
			<div id="notice_<%= notice.id %>" class="panel-collapse collapse">
				<p><%= notice.answer %></p>
			</div>
		<% end %>
	</div>
</div>

<% if current_user && current_user.admin %>
	<%= link_to "new_notice", new_notice_path %><br />
<% end %>

<%= render 'shared/modal' %>
