<% provide(:page_title, "로그인") %>

<div id="login" class="container" style="margin-top: 20px;">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<legend>로그인</legend>

			<div class="form-group">
				<%= f.email_field :email, { autofocus: true, class: "form-control", placeholder: "이메일" } %>
			</div>

			<div class="form-group">
				<%= f.password_field :password, { autocomplete: "off", class: "form-control", placeholder: "비밀번호(8자 이상)" } %>
			</div>

			<div class="form-group" style="float: right;">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me, "로그인 상태 유지" %>
			</div>

			<div class="actions">
				<%= f.button "로그인", class: "btn btn_submit btn-block" %>
			</div>
		<% end %>

		<div class="login_center">
			<%= link_to "비밀번호 찾기", new_password_path(resource_name) %>
			<%= link_to "회원가입" , new_user_registration_path, { style: "float: right;" } %>
		</div>

		<%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-social btn-facebook" do %>
			<i class="fa fa-facebook"></i> 페이스북으로 로그인
		<% end %>
	</div>
</div>
