<% provide(:page_title, "로그인") %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<legend>로그인</legend>

  <div class="form-group">
    <%= f.email_field :email, { autofocus: true, class: "form-control", placeholder: "이메일" } %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, { autocomplete: "off", class: "form-control", placeholder: "비밀번호" } %>
  </div>

  <div class="form-group">
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me, "로그인 상태 유지" %>
	</div>

  <div class="actions">
    <%= f.button "로그인", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "비밀번호 찾기", new_password_path(resource_name) %><br />
<%= link_to "회원가입" , new_user_registration_path %>

<%= link_to user_omniauth_authorize_path(:facebook) do %>
	<%= image_tag "facebook_square.svg", id: "test" %>페이스북으로 로그인
<% end %>
