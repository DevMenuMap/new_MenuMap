<div id="password_reset" class="container" style="margin-top: 20px;">
	<div class="col-md-6 col-md-offset-3">
		<!--%= devise_error_messages! %-->

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<legend>비밀번호 찾기</legend>

			<div class="form-group">
				<%= f.email_field :email, { class: "form-control", autofocus: true, placeholder: "이메일*", data: { must_fill: "이메일" } } %>
			</div>

			<%= f.button "이메일 전송", class: "btn btn_submit btn-block" %>
		<% end %>
	</div>
</div>
