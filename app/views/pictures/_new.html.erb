<%= form_for @picture, html: { multipart: true } do |f| %>
	<!--%= f.hidden_field :imageable_id, @picture.imageable_id.to_s %-->
	<%= f.hidden_field :imageable_id, value: @picture.imageable_id %>
	<%= f.hidden_field :imageable_type, value: @picture.imageable_type %>

	<%= f.label :img %>
	<%= f.file_field :img, accept: "image/jpeg, image/png, image/gif", data: { validate: "image" } %>
	
	<%= f.submit %>
<% end %>
