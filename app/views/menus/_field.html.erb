<div class="form-group">
	<%= f.label :name, "메뉴 이름" %>
	<%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :side_info, "간단 정보" %>
	<%= f.text_field :side_info, class: "form-control", placeholder: "예) (中), 순한맛 등" %>
</div>

<div class="form-group">
	<%= f.label :price, "가격" %>
	<%= f.text_field :price, class: "form-control", placeholder: "숫자만 입력" %>
</div>

<div class="form-group" style="text-align: right;">
	<%= f.check_box :sitga %>
	<%= f.label :sitga, "시가" %>

	<%= f.check_box :unidentified %>
	<%= f.label :unidentified, "미확인" %>
</div>

<div class="form-group">
	<%= f.label :info, "상세 정보" %>
	<%= f.text_field :info, class: "form-control" %>
</div>
