<%= form_for @question do |f| %>
	<% if current_user %>
		<div class="form-group" style="display: none;">
			<%= f.label :email, "이메일(선택)" %>
			<%= f.text_field :email, value: current_user.email, class: "form-control", readonly: true %>
		</div>
	<% else %>
		<div class="form-group">
			<%= f.label :email, "이메일(선택)" %>
			<%= f.text_field :email, class: "form-control" %>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :contents, "질문*" %>
		<%= f.text_area :contents, { rows: 10, class: "form-control" } %>
	</div>

	<div class="form-group">
		<%= check_box_tag :consent %>
		<%= label_tag :consent do %>
			<%= link_to "개인정보 수집 및 이용", personal_info_path %>
			에 동의하겠습니다.<span style="color: #999; font-size: 12px;">(필수)</span>
		<% end %>
	</div>

	<div class="modal-footer" style="padding: 10px 0 0;">
		<%= f.button "취소", class: "btn btn_cancel", data: { dismiss: "modal" } %>
		<%= f.button "등록", class: "btn btn_submit" %>
	</div>
<% end %>
