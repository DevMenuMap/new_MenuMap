<table>
	<tr>
		<th>contents</th>
		<th>created at</th>
		<th></th>
		<th></th>
	</tr>
	<% @comments.each do |comment| %>
		<tr id="comment_<%= comment.id %>">
			<td style="width: 340px;"><%= comment.contents %></td>
			<td><%= time_ago_in_words(comment.created_at) %> ì „</td>
			<td><%= link_to "edit", edit_comment_path(comment), class: "edit_comment", remote: true %></td>
			<td><%= link_to "delete", comment_path(comment), class: "delete_comment", method: :delete, remote: true, data: { confirm: "gogo?" } %></td>
		</tr>
	<% end %>
</table>

<%#= will_paginate @comments %>
<%= will_paginate @comments, :params => {:controller => "restaurants", :action => "show"} %>
