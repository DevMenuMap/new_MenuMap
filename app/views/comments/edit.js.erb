$('#myModal').hide();

// Comments#edit
$("#comment_<%= @comment.id %>").replaceWith("<%= j(render "edit") %>");
starRatingForm();
autocompleteMenus("#comment_<%= @comment.id %> .menu_comments_tag");

// Add original tags.
<% @comment.menus.each do |menu| %>
	$("#comment_<%= @comment.id %> .menu_comments_tag").tagit('createTag', "#<%= menu.name %>")
<% end %>

disableCommentPaste("#comment_<%= @comment.id %> #comment_contents");
commentContentsValidation("#edit_comment_<%= @comment.id %>");
slangCheck("#edit_comment_<%= @comment.id %>", "#edit_comment_<%= @comment.id %> #comment_contents")
